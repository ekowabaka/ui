<!DOCTYPE html>
<html>
    <head>
        <title>FZUI Samples</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            @import url('https://fonts.googleapis.com/css?family=Roboto');
            body{
                width:80%;
                margin-left:auto;
                margin-right:auto;
                font-family: Roboto;
            }

            h1, h2, h3{
                margin-bottom:5px;
            }

            .section{
                font-size:0;
            }

            .section > .half{
                vertical-align: top;
                width:50%;
                display: inline-block;
                font-size: initial;
                box-sizing: border-box;
            }

            .section > .half:first-child{
                padding-right:5px;
            }
            .section > .half:last-child{
                padding-left:5px;
            }

            .pallete{
                display: inline-block;
                width: 16%;
                text-align: center;
                font-weight: bold;
                border-radius: 5px;
                box-sizing: border-box;
            }

            .pallete > div {
                height: 50px;
                line-height: 50px;
                font-weight: normal;
                color: #fff;
            }

            .pallete > div:first-child {
                border-radius: 7px 7px 0px 0px;
            }
            .pallete > div:nth-last-child(2) {
                border-radius: 0px 0px 7px 7px;
            }

            .pallete > div:only-child {
                border-radius: 7px;
            }
        </style>
        <!--<link rel="stylesheet" type="text/css" href="fzui.{{#min}}min.{{/min}}css" />
        <script src="fzui.{{#min}}min.{{/min}}js"></script>-->
        <link rel="stylesheet" type="text/css" href="fzui.css" />
        <script src="fzui.js"></script>
        <script type="text/javascript">
            function getColor(id){
                var rgb = getComputedStyle(document.getElementById(id)).backgroundColor.split(',');
                var output = '#';
                output += parseInt(rgb[0].substring(4)).toString(16);
                output += parseInt(rgb[1]).toString(16);
                output += parseInt(rgb[2]).toString(16);
                return output;
            }
        </script>
    </head>
    <body>
        <h1>FZUI!</h1>
        {{> colours}}
        {{> buttons}}
        {{> dropdown}}
        {{> button_groups}}
        {{> tabs_and_pills}}
        {{> modals}}
        {{> forms}}
    </body>
</html>
